@page "/"
@using BlazorWebAssemblyCustomEvents.CustomEvents;
@using Microsoft.AspNetCore.Components.Forms;

<h1>Hello, world!</h1>
<div class="fileDropArea">
    <button @ondoubleclick="HandleDoubleClick"> Click Me
    </button>
    <h1>@message</h1>
</div>

<style>
    .fileDropArea {
        width: 200px;
        height: 100px;
        outline-color: red;
        outline-width: 1px;
        outline-style: solid;
    }
</style>

@code {
    string message;

    void HandleDoubleClick(DoubleClickEventArgs eventArgs)
    {
        if (eventArgs is not null && eventArgs.isDoubleClick)
        {
            message = $"detected double click!";
        }
        else
        {
            message = "";
        }
    }
}